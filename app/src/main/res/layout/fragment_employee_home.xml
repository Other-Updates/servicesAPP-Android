<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EmployeeHomeFragment">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loader_img"
        android:visibility="gone"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:src="@drawable/solutionsgif"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorApp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Services"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emp_pending_service"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:padding="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/noo_data"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorApp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Today Task"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emp_pending_task"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:padding="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/service_noo_data"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>