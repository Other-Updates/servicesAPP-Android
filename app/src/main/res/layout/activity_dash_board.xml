<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/cus_dash_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/dashboard_tool"
        android:background="@color/colorApp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/service_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Dashboard"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:id="@+id/dash_power_btn"
                android:layout_gravity="center"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customer_options"
        android:visibility="visible"
        android:background="#f5f5f5"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:id="@+id/customer_leads"
            android:src="@drawable/leads"
          />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:id="@+id/customer_service"
            android:src="@drawable/service_text"
            />
    </LinearLayout>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_leads_tool"
        android:visibility="gone"
        android:background="@color/colorApp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="start|left"
                android:layout_weight="0"
                android:src="@drawable/service_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Add Leads"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:padding="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lead_power"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leads_list_tool"
        android:visibility="gone"
        android:background="@color/colorApp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:layout_gravity="start|left"
                android:src="@drawable/service_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Leads"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/add_leads"
                android:layout_weight="0"
                android:padding="10dp"
                android:visibility="gone"
                android:src="@drawable/ic_plus_new"
                />
          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="15dp"
                android:text="Add Leads"
                android:id="@+id/add_leads_tv"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"

                />-->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:id="@+id/add_leads_power"
                android:layout_gravity="center"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service_tool"
        android:visibility="gone"
        android:background="@color/colorApp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:layout_gravity="start|left"
                android:src="@drawable/service_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Service"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:id="@+id/raise_ticket"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@drawable/ic_plus_new"
                />
            <!-- <TextView
                android:id="@+id/raise_ticket_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="Raise Ticket"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold"
                />-->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:id="@+id/serice_power"
                android:layout_gravity="center"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/cus_edit_service_tool"
        android:background="@color/colorApp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/service_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Edit Services"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:id="@+id/cus_edit_service_power_btn"
                android:layout_gravity="center"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warranty_tool"
        android:visibility="gone"
        android:background="@color/colorApp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="start|left"
                android:layout_weight="0"
                android:src="@drawable/service_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:padding="10dp"
                android:text="Warranty Service"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/warranty_power_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/edit_tool"
        android:background="@color/colorApp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="start|left"
                android:layout_weight="0"
                android:src="@drawable/service_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Edit Leads"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/edit_power"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_tool"
        android:visibility="gone"
        android:background="@color/colorApp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/service_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Profile"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:id="@+id/profile_power_btn"
                android:layout_gravity="center"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paid_service_tool"
        android:visibility="gone"
        android:background="@color/colorApp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/service_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Service App"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:id="@+id/paid_service_power"
                android:layout_gravity="center"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_tool"
        android:visibility="gone"
        android:background="@color/colorApp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/service_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Youtube"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0"
                android:id="@+id/apps_power"
                android:layout_gravity="center"
                android:src="@drawable/ic_power" />
        </LinearLayout>
    </Toolbar>
    <RelativeLayout
        android:id="@+id/ads_img_ly"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/ad_view_pager"
            />
        <ImageView
            android:id="@+id/ad_img_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_cancel" />
    </RelativeLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/frame_container" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:id="@+id/loader_ly"
        android:orientation="vertical">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loader_img"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:src="@drawable/solutionsgif"/>
    </LinearLayout>

    <TextView
        android:id="@+id/scrollingtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@color/colorApp"
        android:textColor="@color/colorWhite"
        android:singleLine="true"
        android:autoSizeTextType="none"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit ="marquee_forever"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:id="@+id/bottom_navigation"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/navigation"/>

</LinearLayout>